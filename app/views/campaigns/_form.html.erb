<%= form_for(@campaign, multipart: true) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
   <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :length %>
    <%= f.date_field :length %>
  </div>
   <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <% if @product.nil? %>
  <div class="field">
    <%= f.label :product_id %>
    <%= f.text_field :product_id %>
  </div>
  <% else %>
    <%= f.hidden_field :product_id, value: @product %>
  <% end %>


  <p>
<%= f.submit %>
</p>
<% end %>
