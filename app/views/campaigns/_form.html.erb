<br>
  <div class="container-fluid">
  <%= form_for(@campaign) do |f| %>

    <% if @campaign.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@campaign.errors.count, "error") %> prohibited
        this campaign from being saved:
      </h2>
      <ul>
        <% @campaign.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
    <div class="col-md-5">
      <%= f.text_field :title, class: "form-control", placeholder: "Campaign Title" %>
    </div>
    </div>
    <br>
     <div class="row">
     <div class="col-md-8">
      <%= f.text_area :description, class: "form-control", rows: "10" , placeholder: "Description" %>
    </div>
    </div>
    <br>

     <script>
  $(function() {
    $( "#datepicker" ).datepicker({ minDate: 1, maxDate: "+1M +10D", dateFormat: 'D,  M dd yy'});
  });
  </script>

    <div class="row">
    <div class="col-md-2">
      <%= f.label :length, "Campaign End Date" %>
      <%= f.text_field :length, class: "form-control", id: "datepicker" %>
    </div>
    </div>
    <br>
     <div class="row">
     <div class="col-md-2">
      <%= f.number_field :price, class: "form-control", placeholder: "Product Price" %>
    </div>
    </div>
    <br>
     <div class="row">
     <div class="col-md-2">
      <%= f.number_field :goal, class: "form-control", placeholder: "Campaign Goal" %>
    </div>
    </div>
    <br>

    <%= f.hidden_field :product_id %>
     <%= f.hidden_field :status, value: "on" %>

    <p>
      <%= f.submit "submit", class: "btn btn-default" %>
      <%= link_to 'Back', designer_dashboard_index_path, class: 'btn btn-default' %>
    </p>
  <% end %>
  </div>
