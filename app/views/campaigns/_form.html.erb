  <%= form_for(@campaign) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
     <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :length %>
      <%= f.date_field :length %>
    </div>
     <div class="field">
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>

    <%= f.hidden_field :product_id %>
     <%= f.hidden_field :status, value: "on" %>

    <p>
      <%= f.submit %>
    </p>
  <% end %>

