<br>
<div class="container-fluid">
<%= form_for(@product, multipart: true,) do |f| %>

  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
  <div class="col-md-5">
    <%= f.label :image, 'Image Upload' %>
    <%= f.file_field :image, class: "dropzone" %>
  </div>
    <div class="col-md-3">
    <%= f.label :color, 'Color?' %>
    <%= f.check_box :color %>
  </div>
  <div class="col-md-4">
    <%= f.text_field :name, class: "form-control", placeholder: "Product Name" %>
  </div>
    <div class="col-md-1">
    <%= f.number_field :x, class: "form-control", placeholder: "X" %>
    <br>
    <%= f.number_field :y, class: "form-control", placeholder: "Y" %>
    <br>
    <%= f.number_field :z, class: "form-control", placeholder: "Z" %>
  </div>
  </div>
  <br>
  <div class="row">
  <div class="col-md-5">
    <%= f.label :object, '3D File Upload' %>
    <%= f.file_field :object, class: "dropzone" %>
  </div>
  </div>
  <br>
  <div class="actions pull-right">
    <%= f.submit 'Submit', class: "btn btn-default" %>
    <%= link_to 'Back', designer_dashboard_index_path, class: 'btn btn-default' %>
  </div>
<% end %>
</div>

