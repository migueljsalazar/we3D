<%= form_for(@product, multipart: true) do |f| %>

  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :name%>
    <%= f.text_field :name %>
  </div>
   <div class="field">
    <%= f.label :color, 'Color?' %>
    <%= f.check_box :color %>
  </div>
  <div class="field">
    <%= f.label :object, '3D File' %>
    <%= f.file_field :object %>
  </div>
  <div class="field">
    <%= f.label :x %>
    <%= f.number_field :x %>
  </div>
  <div class="field">
    <%= f.label :y %>
    <%= f.number_field :y %>
  </div>
  <div class="field">
    <%= f.label :z %>
    <%= f.number_field :z %>
  </div>
  <div class="actions">
    <%= f.submit 'Create a Product' %>
    <%= link_to 'Nevermind', products_path, class: 'button' %>
  </div>
<% end %>

