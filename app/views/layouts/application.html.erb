<!DOCTYPE html>
<html>
<head>
  <title>We3D</title>
  <%# Bootstrap Styling %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/<%= bootstrap_version %>/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/<%= bootstrap_version %>/css/bootstrap-theme.min.css" integrity="sha384-aUGj/X2zp5rLCbBxumKTCw2Z50WgIr1vs/PFN4praOTvYXWlVyh2UtNUU0KAUhAX" crossorigin="anonymous">
  <%# Asset Compilation%>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

   <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css">
</head>
<body>

<%# Floating NavBar %>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="active"><a href="<%= root_path %>">Home</a></li>
        <% if current_designer %>
        <li><a href="/designer_dashboard">Dashboard</a></li>
        <li><a href="/products/new">Get Started</a></li>
        <% elsif current_supplier %>
        <li><a href="/supplier_dashboard">Dashboard</a></li>
        <% end %>
        <% if current_designer || current_supplier %>
        <% else %>
        <li><a href="/designers/new">Become a Designer</a></li>
        <li><a href="/suppliers/new">Become a Supplier</a></li>
         <% end %>
      </ul>
       <ul class="nav navbar-nav navbar-right">
        <% if current_designer || current_supplier %>
        <li><a href="<%='/logout'%>">Logout</a></li>
        <% else %>
        <li><a href="<%= 'sessions/new' %>"> Login</a></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>



<%# Views %>
<%= yield %>

<%# Bootstrap Javascript %>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/<%= bootstrap_version %>/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
</body>
</html>
